<h1>新規ユーザー作成</h1>
<%= form_with model: @user, local: true do |f| %>
  <%= f.label :uid %>
  <%= f.text_field :uid %>

  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation, 'パスワード(確認)' %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit '作成' %>
<% end %>